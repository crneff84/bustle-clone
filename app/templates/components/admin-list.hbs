<div class="panel">
  <img class="average" src={{article.image}}>
  <p><em>{{article.author}}</em></p>
  <p><strong>{{article.title}}</strong></p>
  <p>{{article.content}}</p>
  {{#unless displayUpdate}}
    <button {{action 'showUpdate' article}}>Edit</button>
  {{/unless}}
  <button {{action 'destroyArticle' article}}>Delete</button>
  {{#if displayUpdate}}
    <div>
      <form>
        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title"}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author"}}
        </div>

        <div class="form-group">
          <label for="content">Content</label>
          {{input value=content id="content"}}
        </div>

        <div class="form-group">
          <label for="date">Date</label>
          {{input value=date id="date"}}
        </div>

        <div class="form-group">
          <label for="image">Image URL</label>
          {{input value=image id="image"}}
        </div>

        <button {{action 'updateArticle' article}}>Save</button>
      </form>
    </div>
  {{/if}}
</div>
